$(function(){
    // Handle the layout based on the window size
    var handleWindowSize = function() {
        if ($(window).width() <= 1120) {
            $("#articles-sidebar").addClass("hide");
        } else {
            $("#articles-sidebar").removeClass("hide");
        }
    }

    $(window).resize(function() {
        handleWindowSize();
    })
    handleWindowSize();
});
