<form #form-form method=post action=@{formroute}>
    <input #form-wordcount-field name="form-wordcount-field" type="hidden" value="0">
    <textarea #form-htmlcontent-field.hide name="form-htmlcontent-field">
    <div #form-title>
        $maybe article <- marticle
            <input #form-title-field name="form-title-field" type="text" placeholder="The post title" required="" value="#{articleTitle article}">
        $nothing
            <input #form-title-field name="form-title-field" type="text" placeholder="The post title" required="" value="">
    <div #permalink>
        <b>Permalink</b> http://domain.com/article/<b><span id="permalink-text">The-post-title</span></b>/
    
    <div #content-preview-container>
        <div #form-content>
            <div .padding>
                <div .left.red>
                    Markdown
                <div .right.red>
                    <b>?
                <div .clear>
                <hr>
                $maybe article <- marticle
                    <textarea #form-mdcontent-field name="form-mdcontent-field" placeholder="Some nice content to go with that title, ey ;)...">
                        #{articleMdContent article}
                $nothing
                    <textarea #form-mdcontent-field name="form-mdcontent-field" placeholder="Some nice content to go with that title, ey ;)...">
        <div #form-content-preview>
            <div .padding>
                <div .left.red>
                    Preview
                <div .right.red>
                    <span #word-count>
                        0
                    words
                <div .clear>
                <hr>
                <div #preview-content-container>
        <div .clear>
        <div #bottom-bar>
            <div .spacing>
                <div .right>
                    <input type="checkbox" value="true" name="form-publish" #form-publish-box .hide>
                    <input type="checkbox" value="true" name="form-unpublish" #form-unpublish-box .hide>
                    $maybe article <- marticle
                        <input #form-save-btn .btn.btn-primary.extra-padding type="submit" value="Update">
                        $if (articleVisible article)
                            <input #form-unpublish-btn .btn.btn-danger type="submit" value="Unpublish">
                        $else
                            <input #form-publish-btn .btn.btn-success type="submit" value="Publish">
                    $nothing
                        <input #form-save-btn .btn.btn-primary.extra-padding type="submit" value="Save Draft">
                        <input #form-publish-btn .btn.btn-success type="submit" value="Publish">
